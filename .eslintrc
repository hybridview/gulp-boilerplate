{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      2,
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 120,
        "semi": false,
        "parser": "flow",
        "jsxBracketSameLine": true
      }
    ],
    "no-unused-vars": 2,
    "no-console": 2,
    "no-restricted-syntax": 2
  }
}